<Page x:Class="AccountingSystem.View.TransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingSystem.View"
      mc:Ignorable="d"
      Height="600" Width="920"
      Background="Transparent"
      Title="Transaction Page">

    <Border Background="#272537"
            CornerRadius="20"
            SnapsToDevicePixels="True">
        <Grid>

            <!-- Define layout rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <!-- Header -->
                <RowDefinition Height="55"/>
                <!-- Navbar -->
                <RowDefinition/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- HEADER (Draggable) -->
            <Border Background="#0B2E33"
                    Grid.Row="0"
                    MouseDown="Border_MouseDown"
                    CornerRadius="20,20,0,0">
                <!-- Rounded top only -->
                <Grid>
                    <TextBlock Text="Accounting System"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="20,0,0,0"/>

                    <!-- CLOSE BUTTON -->
                    <Button Content="✕"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Width="35"
                            Height="35"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="3"
                            Cursor="Hand"
                            Click="ExitButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF3B30"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#E53935"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- NAVBAR -->
            <Border Grid.Row="1"
                    Background="#4F7C82"
                    Padding="10,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                    <!-- Example Text Buttons -->
                    <Button Content="New Transaction"
                            Padding="10,5"
                            FontSize="16"
                            FontFamily="Calibri"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="{TemplateBinding Foreground}"
                                                       FontWeight="{TemplateBinding FontWeight}"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Transaction"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Accounts"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="General Journal"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Ledger"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Balance Sheet"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2"
                  Background="#e2e3ea"
                  
                  >
                <Border Height="400" 
                        CornerRadius="7"
                        Background="White" Margin="43,40,43,40">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Transaction"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,29"
                                   FontFamily="Arial"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#0B2E33"/>


                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="1" Content="Search" Margin="56,8,-16,-8" />
                            <Border
                               BorderThickness="1"
                                BorderBrush="Black"
                                Background="#F1F5F9"
                                Padding="10"
                                Width="300"
                                HorizontalAlignment="Left" Margin="105,10,0,-2" Grid.Row="1"
                                />
                        </Grid>


                        <DataGrid Grid.Row="1
                                  " ItemsSource="{Binding Transactions}" 
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  Margin="10,10,10,29"
                                  IsReadOnly="True"
                                  CanUserAddRows="False" Grid.RowSpan="2">

                            <DataGrid.Columns>
                                <DataGridTextColumn Width="120" Header="Date" Binding="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}" />
                                <DataGridTextColumn Width="200" Header="Description" Binding="{Binding Description}" />
                                <DataGridTextColumn Width="150" Header="Debit Account" Binding="{Binding DebitAccount}" />
                                <DataGridTextColumn Width="150" Header="Credit Account" Binding="{Binding CreditAccount}" />
                                <DataGridTextColumn Width="120" Header="Amount" Binding="{Binding Amount, StringFormat=C}" />
                            </DataGrid.Columns>
                        </DataGrid>



                    </Grid>
                </Border>

            </Grid>

        </Grid>
    </Border>
</Page>
