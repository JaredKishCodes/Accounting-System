<Window x:Class="AccountingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="600" Width="920"
        Title="Accounting System"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <!-- Main rounded container -->
    <Border Background="#272537"
            CornerRadius="20"
            SnapsToDevicePixels="True">
        <Grid>

            <!-- Define layout rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <!-- Header -->
                <RowDefinition Height="55"/>
                <!-- Navbar -->
                <RowDefinition/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- HEADER (Draggable) -->
            <Border Background="#0B2E33"
                    Grid.Row="0"
                    MouseDown="Border_MouseDown"
                    CornerRadius="20,20,0,0">
                <!-- Rounded top only -->
                <Grid>
                    <TextBlock Text="Accounting System"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="20,0,0,0"/>

                    <!-- CLOSE BUTTON -->
                    <Button Content="✕"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Width="35"
                            Height="35"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="3"
                            Cursor="Hand"
                            Click="ExitButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF3B30"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#E53935"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- NAVBAR -->
            <Border Grid.Row="1"
                    Background="#4F7C82"
                    Padding="10,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                    <!-- Example Text Buttons -->
                    <Button Content="New Transaction"
                            Padding="10,5"
                            FontSize="16"
                            FontFamily="Calibri"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NewTransactionButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Transaction"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"
                            Click="TransactionButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Accounts"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"
                            Click="AccountsButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="General Journal"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"
                            Click="GeneralJournalButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Ledger"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"
                            Click="LedgerButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Balance Sheet"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"
                            Click="BalanceSheetButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5A8A8F"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="15" ShadowDepth="3" Opacity="0.6"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4A7A7F"/>
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#4F7C82" BlurRadius="8" ShadowDepth="1" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2"
                  Background="#e2e3ea"
                  
                  >
                <Border Width="500" Height="400" CornerRadius="7"  Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Add New Transaction"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Margin="0,20,0,0"
                                   FontFamily="Arial"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#0B2E33"/>

                       

                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Height="250
                                        " Width="480">
                                <Label   FontWeight="Bold" FontSize="10" Content="Date(YYYY,MM,DD)" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox Text="{Binding NewTransaction.Date, UpdateSourceTrigger=PropertyChanged}" Width="475" Height="25"   HorizontalAlignment="Left"/>

                                <Label   FontWeight="Bold" FontSize="10" Content="Description" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox Text="{Binding NewTransaction.Description, UpdateSourceTrigger=PropertyChanged}"  Width="475" Height="25"   HorizontalAlignment="Left"/>
                               
                                <Label   FontWeight="Bold" FontSize="10" Content="Debit Account" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox Text="{Binding NewTransaction.DebitAccount, UpdateSourceTrigger=PropertyChanged}"  Width="475" Height="25"   HorizontalAlignment="Left"/>

                                <Label   FontWeight="Bold" FontSize="10" Content="Credit Account" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox Text="{Binding NewTransaction.CreditAccount, UpdateSourceTrigger=PropertyChanged}"  Width="475" Height="25"   HorizontalAlignment="Left"/>

                            <Label   FontWeight="Bold" FontSize="10" Content="Amount" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox Text="{Binding NewTransaction.Amount, UpdateSourceTrigger=PropertyChanged}"  Width="475" Height="25"   HorizontalAlignment="Left"/>




                        </StackPanel>
                        <Button Command="{Binding CreateTransactionsAsyncCommand}" CommandParameter="{Binding NewTransaction}" Grid.Row="2" Content="Submit" Background="#93B1B5" Foreground="White" FontSize="15" FontWeight="Bold" Width="475" Height="30" Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="SubmitBorder"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Width="{TemplateBinding Width}"
                                                        Height="{TemplateBinding Height}">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#A8C4C9"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                        <Setter TargetName="SubmitBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#93B1B5" BlurRadius="20" ShadowDepth="4" Opacity="0.7"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#7A9DA3"/>
                                                        <Setter Property="Foreground" Value="#F0F0F0"/>
                                                        <Setter TargetName="SubmitBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#93B1B5" BlurRadius="10" ShadowDepth="2" Opacity="0.9"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                            
                        
                        
                    </Grid>
                </Border>
               
            </Grid>

        </Grid>
    </Border>
</Window>
