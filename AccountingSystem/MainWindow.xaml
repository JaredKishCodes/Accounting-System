<Window x:Class="AccountingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="600" Width="920"
        Title="Accounting System"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Main rounded container -->
    <Border Background="#272537"
            CornerRadius="20"
            SnapsToDevicePixels="True">
        <Grid>

            <!-- Define layout rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <!-- Header -->
                <RowDefinition Height="55"/>
                <!-- Navbar -->
                <RowDefinition/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- HEADER (Draggable) -->
            <Border Background="#0B2E33"
                    Grid.Row="0"
                    MouseDown="Border_MouseDown"
                    CornerRadius="20,20,0,0">
                <!-- Rounded top only -->
                <Grid>
                    <TextBlock Text="Accounting System"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="20,0,0,0"/>

                    <!-- CLOSE BUTTON -->
                    <Button Content="✕"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Width="35"
                            Height="35"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="3"
                            Cursor="Hand"
                            Click="ExitButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF3B30"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#E53935"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- NAVBAR -->
            <Border Grid.Row="1"
                    Background="#4F7C82"
                    Padding="10,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                    <!-- Example Text Buttons -->
                    <Button Content="New Transaction"
                            Padding="10,5"
                            FontSize="16"
                            FontFamily="Calibri"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="{TemplateBinding Foreground}"
                                                       FontWeight="{TemplateBinding FontWeight}"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#B0B0B0"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Foreground" Value="#808080"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Transaction"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"/>

                    <Button Content="Accounts"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"/>

                    <Button Content="General Journal"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"/>

                    <Button Content="Ledger"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"/>

                    <Button Content="Balance Sheet"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="10,0"/>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2"
                  Background="#e2e3ea"
                  
                  >
                <Border Width="500" Height="400" CornerRadius="7"  Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Add New Transaction"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Margin="0,20,0,0"
                                   FontFamily="Arial"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#0B2E33"/>

                       

                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Height="200" Width="480">
                                <Label   FontWeight="Bold" FontSize="10" Content="Date(YYYY,MM,DD)" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                                <TextBox   Width="475" Height="25"   HorizontalAlignment="Left"/>

                                <Label   FontWeight="Bold" FontSize="10" Content="Description" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox   Width="475" Height="25"   HorizontalAlignment="Left"/>
                               

                                <Label   FontWeight="Bold" FontSize="10" Content="Debit Amount" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <RichTextBox   Width="475" Height="25"   HorizontalAlignment="Left"/>

                                <Label   FontWeight="Bold" FontSize="10" Content="Credit Amount" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <TextBox   Width="475" Height="25"   HorizontalAlignment="Left"/>

                                <Label  FontWeight="Bold" FontSize="10" Content="Amount" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left"/>
                            <RichTextBox   Width="475" Height="25"   HorizontalAlignment="Left"/>


                            

                        </StackPanel>
                        <Button Grid.Row="2" Content="Submit" Background="#93B1B5" Foreground="White" FontSize="15" FontWeight="Bold" Width="475" Height="30" Margin="0,0,10,0"/>
                            
                        
                        
                    </Grid>
                </Border>
               
            </Grid>

        </Grid>
    </Border>
</Window>
